<div class="page_header">
  <div class=" pull-right">
    <%= link_to '新增页面', new_admin_page_path, :class=>'btn btn-success' %>
  </div>
  <h4>页面列表</h4>
</div>
<table class="table table-striped table-bordered table-hover">
  <% if @pages.any? %>
      <col width="100"/>
      <col />
      <col width="150"/>
      <thead>
      <tr>
        <td>名称</td>
        <td>内容摘要</td>
        <td>操作</td>
      </tr>
      </thead>
      <tbody>
      <% @pages.each do |page| %>
          <tr>
            <td>
              <%=  page.name %>
            </td>
            <td>
              <%= page.content.truncate(100).html_safe %>
            </td>
            <td>
              <%= link_to '编辑', edit_admin_page_path(page), :class=>'btn btn-link btn-sm' %>
              <%= link_to '删除', admin_page_path(page), :method=> :delete, :data=>{:confirm=>'确定删除么?'}, :class=>'btn btn-link btn-sm' %>
            </td>
          </tr>
      <% end %>
      </tbody>
  <% else %>
      <%= render "admin/base/table_no_data" %>
  <% end %>
</table>
<div class="text-center">
  <%= will_paginate @pages  %>
</div>
