

<div class="  panel panel-default panel-small">
  <div class="panel-heading">
    <h3 class="panel-title">管理登录</h3>
  </div>
  <div class="panel-body">
    <%= form_tag admin_login_path, :method=> :post, :remote=> true do  %>
       <div class="form-group email required">
         <div class="input-group">
           <div class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></div>
           <%= text_field_tag :email, nil, :class=>'string email required form-control',:placeholder=>"管理员邮箱",:type=>"email"  %>
         </div>
         <span class="email_error_field"></span>
       </div>
        <div class="form-group email required">
          <div class="input-group">
            <div class="input-group-addon"><span class="glyphicon glyphicon-info-sign"></span></div>
            <%= password_field_tag :password, nil, :class=>'password  required form-control', :placeholder=>'登陆密码' %>
          </div>
            <span class="password_error_field"></span>
        </div>
        <div class="row">
          <div class="col-xs-6">
            <div class="form-group">
              <%= rucaptcha_input_tag(class: 'form-control js_rucaptcha_input', placeholder: '验证码') %>
              <span class="rucaptcha_error_field"></span>
            </div>
          </div>
          <div class="col-xs-6">
            <%= rucaptcha_image_tag(alt: 'Captcha') %>
          </div>
        </div>
        <hr>
        <div class="text-center">
          <%= button_tag "登录",:class=>"btn btn-success btn-block js_btn",:data=>{"disable-with"=>"请稍后..."} %>
        </div>

    <% end %>
  </div>
</div>